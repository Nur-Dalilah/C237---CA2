<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title><%= listing.listingName %> - Listing App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Listing App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <% if (user.role !== 'admin') { %>
              <li class="nav-item">
                <a class="nav-link" href="/cart">View Cart</a>
              </li> 
            <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container mt-4">
    <!-- back button -->
    <div class="mb-3">
      <% if (user.role === 'admin') { %>
        <a href="/inventory" class="btn btn-secondary">
          <i class="bi bi-arrow-left"></i> Back to Inventory
        </a>
      <% } else { %>
        <a href="/listing" class="btn btn-secondary">
          <i class="bi bi-arrow-left"></i> Back to Listings
        </a>
      <% } %>
    </div>

    <div class="row">
      <!-- product image -->
      <div class="col-md-6">
        <img src="/images/<%= listing.image %>" class="img-fluid rounded shadow" alt="<%= listing.listingName %>">
      </div>
      
      <!-- product details -->
      <div class="col-md-6">
        <h1 class="mb-3"><%= listing.listingName %></h1>
        
        <!-- price -->
        <div class="mb-4">
          <h2 class="text-primary fw-bold">$<%= listing.price.toFixed(2) %></h2>
        </div>
        
        <!-- add to cart form -->
        <% if (user.role !== 'admin') { %>
          <form action="/add-to-cart/<%= listing.listingId %>" method="POST" class="mb-4">
            <div class="row align-items-end">
              <div class="col-md-8">
                <button type="submit" class="btn btn-primary btn-lg">
                  <i class="bi bi-cart-plus me-2"></i>Add to Cart
                </button>
              </div>
            </div>
          </form>
        <% } else { %>
          <div class="alert alert-info mb-4">
            <i class="bi bi-info-circle me-2"></i>
            To purchase items, please use a user account instead of an admin account.
          </div>
        <% } %>
      </div>
    </div>
    
    <!-- description section at bottom -->
    <div class="row mt-5">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="mb-0">Product Description</h3>
          </div>
          <div class="card-body">
            <p class="lead"><%= listing.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>
</html>